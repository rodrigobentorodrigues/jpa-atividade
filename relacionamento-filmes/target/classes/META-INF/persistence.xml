<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="UPersistence" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!--<class>com.ifpb.dac.relacionamentos.entidades.EventoFilme</class>-->
    <class>com.ifpb.dac.relacionamentos.entidades.Ator</class>
    <class>com.ifpb.dac.relacionamentos.entidades.Evento</class>
    <class>com.ifpb.dac.relacionamentos.entidades.EventoFilme</class>
    <class>com.ifpb.dac.relacionamentos.entidades.Filme</class>
    <properties>
      <!--<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Relacionamentos"/>-->
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://host-banco:5432/Relacionamentos"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="12345"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
